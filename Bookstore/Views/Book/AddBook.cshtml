
@{
    ViewData["Title"] = "AddBook";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model BookModel

<div class="container">
    <h3 class="h3">Add new Book</h3>
    <form method="post" asp-action="AddBook" asp-controller="Book">
        <div class="form-group row">
            <label asp-for="Title" class="col-sm-2 col-form-label"></label>
            <input asp-for="Title" class="form-control col-sm-5" required/>
        </div>
        <div class="form-group row">
            <label asp-for="Author" class="col-sm-2 col-form-label"></label>
            <input asp-for="Author" class="form-control col-sm-5" />
        </div>
        <div class="form-group row">
            <label asp-for="Description" class="col-sm-2 col-form-label"></label>
            <textarea asp-for="Description" class="form-control col-sm-5"></textarea>
        </div>
        <div class="form-group row">
            <label asp-for="Category" class="col-sm-2 col-form-label"></label>
            <input asp-for="Category" class="form-control col-sm-5" />
        </div>
        <div class="form-group row">
            <label asp-for="TotalPages" class="col-sm-2 col-form-label"></label>
            <input asp-for="TotalPages" class="form-control col-sm-5" />
        </div>
        <div class="form-group row">
            <label asp-for="Language" class="col-sm-2 col-form-label"></label>
            <input asp-for="Language" class="form-control col-sm-5" />
        </div>
        <div class="form-group row">
            <input type="submit" value="Add Book" class="btn btn-primary col-sm-3" />
        </div>
    </form>
</div>


